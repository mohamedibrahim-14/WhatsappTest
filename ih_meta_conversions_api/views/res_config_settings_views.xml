<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Meta Pixel & Conversions API Settings -->
    <record id="view_res_config_settings_meta_capi" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.meta.pixel.capi</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='cdn_setting']" position="before">
                <!-- Meta Pixel (Client-side) Section -->
                <div class="col-12 col-lg-6 o_setting_box" id="meta_pixel_setting">
                    <div class="o_setting_left_pane">
                        <field name="meta_pixel_enabled"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="meta_pixel_enabled" string="Meta Pixel"/>
                        <div class="text-muted">
                            Enable client-side Meta Pixel tracking for PageView, AddToCart, Purchase events.
                        </div>
                        <group>
                            <field name="meta_pixel_id"
                                string="Pixel ID"
                                invisible="not meta_pixel_enabled"
                                required="meta_pixel_enabled"/>
                        </group>
                    </div>
                </div>

                <!-- Meta Conversions API (Server-side) Section -->
                <div class="col-12 col-lg-6 o_setting_box" id="meta_conversions_api_setting">
                    <div class="o_setting_left_pane">
                        <field name="meta_capi_enabled"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="meta_capi_enabled" string="Meta Conversions API"/>
                        <div class="text-muted">
                            Enable server-side event tracking. Works together with Meta Pixel for better data quality.
                        </div>
                        <group>
                            <field name="meta_capi_access_token"
                                string="Access Token"
                                password="True"
                                invisible="not meta_capi_enabled"
                                required="meta_capi_enabled"/>

                            <field name="meta_capi_test_event_code"
                                string="Test Event Code"
                                invisible="not meta_capi_enabled"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

