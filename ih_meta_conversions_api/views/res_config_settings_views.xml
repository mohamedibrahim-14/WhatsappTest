<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_meta_capi" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.meta.conversions.api</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='cdn_setting']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="meta_conversions_api_setting">
                    <div class="o_setting_left_pane">
                        <field name="meta_capi_enabled"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="meta_capi_enabled" string="Meta Conversions API"/>
                        <div class="text-muted">
                            Send server-side events (PageView, Purchase, AddToCart, etc.)
                            from Odoo to Meta (Facebook) Conversions API.
                        </div>
                        <group>
                            <field name="meta_capi_pixel_id"
                                invisible="not meta_capi_enabled"
                                required="meta_capi_enabled"/>

                            <field name="meta_capi_access_token"
                                password="True"
                                invisible="not meta_capi_enabled"
                                required="meta_capi_enabled"/>

                            <field name="meta_capi_test_event_code"
                                invisible="not meta_capi_enabled"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

