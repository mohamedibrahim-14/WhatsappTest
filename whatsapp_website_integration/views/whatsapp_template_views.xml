<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Auto Send field to WhatsApp Template Form View -->
    <record id="view_whatsapp_template_form_auto_send" model="ir.ui.view">
        <field name="name">whatsapp.template.form.auto.send</field>
        <field name="model">whatsapp.template</field>
        <field name="inherit_id" ref="whatsapp.whatsapp_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <field name="auto_send_on_order" 
                       widget="boolean_toggle"
                       string="Auto Send on Website Order"/>
            </xpath>
            <xpath expr="//field[@name='footer_text']" position="after">
                <field name="trigger_sale_order_confirm"
                       widget="boolean_toggle"
                       string="Confirm Order on Tap"
                       />
            </xpath>
        </field>
    </record>
    
    <!-- Add Auto Send field to WhatsApp Template Tree View -->
    <record id="view_whatsapp_template_tree_auto_send" model="ir.ui.view">
        <field name="name">whatsapp.template.tree.auto.send</field>
        <field name="model">whatsapp.template</field>
        <field name="inherit_id" ref="whatsapp.whatsapp_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <field name="auto_send_on_order" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
    
