    <!-- Add WhatsApp Status to Sale Order Form View -->
    <record id="view_order_form_whatsapp_status" model="ir.ui.view">
        <field name="name">sale.order.form.whatsapp.status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="whatsapp_msg_sent" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_send_whatsapp_manual"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-whatsapp"
                        groups="sales_team.group_sale_salesman"
                        >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Send</span>
                        <span class="o_stat_text">WhatsApp</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    
